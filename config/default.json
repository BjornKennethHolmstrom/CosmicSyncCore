{
  "database": {
    "user": "${DB_USER}",
    "host": "${DB_HOST}",
    "database": "${DB_NAME}",
    "password": "${DB_PASSWORD}",
    "port": "${DB_PORT}"
  },
  "p2p": {
    "topic": "cosmicsynccore",
    "bootstrapNodes": [
      // Add bootstrap nodes here
    ]
  },
  "backup": {
    "directory": "./backups",
    "maxBackups": 5,
    "compression": true,
    "schedule": {
      "full": "0 0 * * 0",  // Weekly full backup
      "incremental": "0 0 * * *"  // Daily incremental backup
    }
  }
}
